name: Test
on: push
jobs:
  test:
    name: Jest + ESLint
    runs-on: ubuntu-latest
    strategy:
      matrix:
        node-version: [10, 12]
      fail-fast: true
    steps:
      - uses: actions/checkout@v1
      - uses: actions/setup-node@v1
        with:
          node-version: ${{ matrix.node-version }}
      - name: Building project
        uses: ./.github/actions/setup
      - name: Run Jest
        run: yarn run jest:coverage
      - name: Run ESLint
        run: yarn run lint:errors
